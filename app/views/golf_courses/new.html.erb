<% provide(:title, "Golf Course New") %>
<%= button_to "戻る", golf_courses_path, method: :get, class: "btn btn-primary" %>
<h1>ゴルフ場の名前作成</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with(model: @golf_course)do |f| %>
            <%= f.hidden_field :user_id, value: @user.id %>

            <%= f.label :name, "コース名" %>
            <%= f.text_field :name, placeholder: "コース名を入力してください", class: "form-control" %>

            <div class="text-center">
            <%= f.submit "登録", class: "btn btn-primary" %>
            </div>
        <% end %>
  </div>
</div>

