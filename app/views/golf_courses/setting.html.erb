<% provide(:title, "Golf Course Setting") %>

<% if @error_message.present? %>
  <p><%= @error_message %></p>
  <%= button_to "戻る", golf_course_search_path, method: :get, class: "btn btn-primary" %>
<% else @golf_courses.present? %>
  <h1><%= @golf_course['golfCourseName'] %></h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with(model: @user) do |f| %>

        <%= f.label :name, "ユーザー名" %>
        <%= f.text_field :name, class: 'form-control' %>


        <%= f.submit "保存する", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

<% end %>

